<script>
/* Données produits - modifie/ajoute selon tes pièces */
const PRODUCTS = [
  { id:1, name:"Support GPS BRX Race", price:39, img:"https://images.unsplash.com/photo-1519681393784-d120267933ba?auto=format&fit=crop&w=800&q=60", desc:"Support GPS léger, compatible Wahoo/Garmin." },
  { id:2, name:"Porte-bidon Aero", price:29, img:"https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?auto=format&fit=crop&w=800&q=60", desc:"Porte-bidon profilé, fixation solide et poids réduit." },
  { id:3, name:"Adaptateur axe de roue", price:49, img:"https://images.unsplash.com/photo-1509395176047-4a66953fd231?auto=format&fit=crop&w=800&q=60", desc:"Adaptateur sur mesure pour axes non standards." },
  { id:4, name:"Cache câble cadre", price:19, img:"https://images.unsplash.com/photo-1545239351-1141bd82e8a6?auto=format&fit=crop&w=800&q=60", desc:"Cache propre et discret pour routage interne." },
  { id:5, name:"Clip nutrition triathlon", price:24, img:"https://images.unsplash.com/photo-1520975919212-9b91d0f2e8b3?auto=format&fit=crop&w=800&q=60", desc:"Support nutrition facile d'accès pendant la course." }
];

/* Rendu des cartes produits */
const grid = document.getElementById('productGrid');
function renderProducts(){
  grid.innerHTML = "";
  PRODUCTS.forEach(p=>{
    const div = document.createElement('div'); div.className='card';
    div.innerHTML = `
      <img src="${p.img}" alt="${p.name}">
      <h3>${p.name}</h3>
      <p class="muted">${p.desc}</p>
      <div style="display:flex;justify-content:space-between;align-items:center;margin-top:8px">
        <div class="price">€${p.price.toFixed(2)}</div>
        <div>
          <button class="btn" onclick="addToCart('${p.name}',${p.price})">Ajouter</button>
        </div>
      </div>
    `;
    grid.appendChild(div);
  });
}
renderProducts();

/* Panier simple stocké en localStorage */
let cart = JSON.parse(localStorage.getItem('brx_cart')||'[]');
function saveCart(){ localStorage.setItem('brx_cart',JSON.stringify(cart)); updateCartUI(); }
function addToCart(name,price){
  cart.push({name,price}); saveCart();
  alert(name + " ajouté au panier");
}
function updateCartUI(){
  document.getElementById('cartCount').textContent = cart.length;
  const items = document.getElementById('cartItems');
  items.innerHTML = '';
  let total = 0;
  cart.forEach((it,i)=>{
    total += Number(it.price);
    const r = document.createElement('div'); r.className='cart-row';
    r.innerHTML = `<div>${it.name}</div><div>€${Number(it.price).toFixed(2)} <button style="margin-left:8px" onclick="removeItem(${i})">✕</button></div>`;
    items.appendChild(r);
  });
  document.getElementById('cartTotal').textContent = '€'+total.toFixed(2);
}
function removeItem(idx){ cart.splice(idx,1); saveCart(); }
function clearCart(){ if(confirm('Vider le panier ?')){ cart=[]; saveCart(); } }

/* Toggle panel */
const cartBtn = document.getElementById('cartBtn');
const cartPanel = document.getElementById('cartPanel');
cartBtn.addEventListener('click', ()=>{ cartPanel.style.display = cartPanel.style.display === 'block' ? 'none' : 'block'; });

updateCartUI();

/* Checkout : génère un e-mail prêt à envoyer (ici mailto) */
function checkout(){
  if(cart.length===0){ alert("Panier vide"); return; }
  const total = cart.reduce((s,i)=>s+Number(i.price),0);
  const lines = cart.map(it=>`- ${it.name} : €${Number(it.price).toFixed(2)}`).join('%0A');
  const body = `Bonjour%0A%0AJe souhaite commander les articles suivants :%0A${lines}%0A%0ATotal : €${total.toFixed(2)}%0A%0ANom : %0AEmail : %0AAdresse de livraison : %0ACommentaires : %0A%0AMerci,%0A`;
  const mail = `mailto:contact@brx3d.example?subject=Commande BRX&body=${body}`;
  window.location.href = mail;
}

/* Formulaire sur-mesure : récupère données et ouvre mailto */
function submitCustom(){
  const name = document.getElementById('c_name').value.trim();
  const email = document.getElementById('c_email').value.trim();
  const type = document.getElementById('c_type').value;
  const msg = document.getElementById('c_msg').value.trim();
  if(!name || !email){ alert('Merci de renseigner nom et email'); return; }
  const body = encodeURIComponent(`Demande sur-mesure\n\nNom: ${name}\nEmail: ${email}\nType: ${type}\nDescription: ${msg}\n\n(Fichiers STL : voir note sur la page.)`);
  window.location.href = `mailto:contact@brx3d.example?subject=Demande sur-mesure BRX&body=${body}`;
}

/* Contact simple */
function sendContact(){
  const n = document.getElementById('ct_name').value.trim();
  const e = document.getElementById('ct_email').value.trim();
  const m = document.getElementById('ct_msg').value.trim();
  if(!n||!e){ alert('Nom et email requis'); return; }
  const body = encodeURIComponent(`Message depuis le site BRX\n\nNom: ${n}\nEmail: ${e}\nMessage: ${m}`);
  window.location.href = `mailto:contact@brx3d.example?subject=Contact BRX&body=${body}`;
}
</script>
